        <url>http://github.com/kevoree-modeling/mwDB.git</url>
    </scm>

    <parent>
        <groupId>org.sonatype.oss</groupId>
        <artifactId>oss-parent</artifactId>
        <version>7</version>
    </parent>

    <properties>
        <java2typescript.plugin.version>59</java2typescript.plugin.version>
    </properties>

